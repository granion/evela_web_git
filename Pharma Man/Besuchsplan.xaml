<Page x:Class="Pharma_Man.Besuchsplan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharma_Man"
      mc:Ignorable="d" 
      
      d:DesignHeight="700" d:DesignWidth="844"
     
      
      Title="Besuchsplan">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" x:Name="page_caption" Content="Besuchsplanung" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="48" Foreground="White"/>
        
        <Viewbox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Calendar x:Name="calendar" SelectedDatesChanged="calendar_SelectedDatesChanged" BorderBrush="{x:Null}" Background="#FF75C335" Foreground="White"/>
        </Viewbox>

    </Grid>
</Page>
