<Window x:Class="Pharma_Man.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharma_Man"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1024" ResizeMode="NoResize">
    <Grid>
        <Frame x:Name="frame" Content="" NavigationUIVisibility="Hidden" Margin="180,0,0,0" Background="#FFA2A2A2"/>
        <Grid HorizontalAlignment="Left" Height="691" VerticalAlignment="Top" Width="180" Background="#FF323232">
            <Button x:Name="btn_BesuchErfassen" Content="Besuch erfassen" HorizontalAlignment="Left" Margin="0,102,0,0" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Left" Click="btn_BesuchErfassen_Click" Height="30"/>
            <Button x:Name="btn_Besuchsplan" Content="Besuchsplan" HorizontalAlignment="Left" Margin="0,67,0,0" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Left" Click="btn_Besuchsplan_Click" Height="30"/>
            <Button x:Name="btn_prev" Content="Zurück" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Click="btn_prev_Click" HorizontalContentAlignment="Left"/>
            <Button x:Name="btn_next" Content="Vor" HorizontalAlignment="Left" Margin="135,0,0,0" VerticalAlignment="Top" Width="45" Click="btn_next_Click" HorizontalContentAlignment="Left"/>
            <Button x:Name="button" Content="Abrechnung" HorizontalAlignment="Left" Margin="0,137,0,0" VerticalAlignment="Top" Width="180" Height="30" HorizontalContentAlignment="Left"/>
            <Button x:Name="button_Copy" Content="Ärzteliste" HorizontalAlignment="Left" Margin="0,172,0,0" VerticalAlignment="Top" Width="180" Height="30" HorizontalContentAlignment="Left"/>
        </Grid>

    </Grid>
</Window>
